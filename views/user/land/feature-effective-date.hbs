  {{>breadcrumb}}


  <div class="grid-row">


    <div class="column-half">      


      <form class="form" method="post" action="/land/parcel-details-summary/">
        
        
        <h1 class="form-title heading-xlarge">{{page_name}}</h1>


        <p class="lede">Add an effective date for this feature or land cover.</p>
        
        
        <div class="form-group">
        
        
          <fieldset>
            
    
            <legend class="form-label">Effective date</legend>
            
            
            <div class="form-date">
            
            
              <p class="form-hint">For example, 31 3 1980</p>
              
              
              <div class="form-group form-group-day">
                <label for="effective-date-day">Day</label>
                <input class="form-control" id="effective-date-day" name="effective_date_day" type="number" pattern="[0-9]*" min="0" max="31" value="{{effective_date_day}}">
              </div>
              
              
              <div class="form-group form-group-month">
                <label for="effective-date-month">Month</label>
                <input class="form-control" id="effective-date-month" name="effective_date_month" type="number" pattern="[0-9]*" min="0" max="12" value="{{effective_date_month}}">
              </div>
              
              
              <div class="form-group form-group-year">
                <label for="effective-date-year">Year</label>
                <input class="form-control" id="effective-date-year" name="effective_date_year" type="number" pattern="[0-9]*" min="0" max="2014" value="{{effective_date_year}}">
              </div>
              
            
            </div>
            
          
          </fieldset>
          
        
        </div>


        <div class="form-group">          
          <button class="button" type="submit">Save and continue</button>          
        </div>
        
        
        <p><a href="/land/feature-details/">Back</a></p>


      </form>


    </div>


    <div class="column-half">

      {{>map}}
      
    </div>


  </div>