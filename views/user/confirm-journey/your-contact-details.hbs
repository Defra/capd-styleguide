	<div class="grid-row">
		
		
		<div class="column-two-thirds">


      <form class="form" method="get" action="/confirm-journey/your-contact-preferences/">
        
        
        <h1 class="form-title heading-xlarge">{{page_name}}</h1>
  

        <p class="lede">Check the details below for any errors.</p>  
  
        
        <h2 class="heading-medium">Address</h2>
        
        <div class="form-group">  
  
  
          <fieldset>            
            
            <legend class="visuallyhidden">Address</legend>             
            
            <div class="toggle">          
            
              <p><a class="toggle-link" href="#find-postcode">Find a UK address</a></p>            
              
              <div class="toggle-content">
                
                <div class="panel-indent">
                
                  <div class="form-group form-group-compound">
        
                    <label class="form-label" for="postcode-search">Postcode</label>
          
                    <div class="form-search">
                      <input class="form-control form-control-1-4" type="text" id="postcode-search">
                      <button class="button" type="button">Find address</button>
                    </div>
          
                  </div>
                
                </div>
                
              </div>          
            
            </div>            
            
            <div class="form-group form-group-compound">        						
    					<label class="form-label"for="address-line-1">Street</label>  					
    					<input class="form-control" id="address-line-1" type="text" value="Pooley Bridge">  					
    				</div>    				
    
    				<div class="form-group"> 					
    					<label class="form-label visuallyhidden" for="address-line-2">Street</label>  					
    					<input class="form-control" id="address-line-2" type="text">  					
    				</div>    				
    
    				<div class="form-group">
    					<label class="form-label" for="address-town">Town or City</label>  					
    					<input class="form-control" id="address-town" type="text" value="Penrith">  					
    				</div>    				
    
    				<div class="form-group form-group-compound">  					
    					<label class="form-label" for="address-postcode">Postcode</label>  					
    					<input class="form-control form-control-1-4" id="address-postcode" type="text" value="CH3 6NZ">  				
    				</div>
            
          </fieldset>

        
        </div>
  
  
        <h2 class="heading-medium">Email and telephone</h2>
        
        <p>You must enter either a landline or mobile number.</p>
  
        <div class="form-group">
    
    
          <fieldset>
    
            <legend class="visuallyhidden">Email and telephone</legend>
    
            <div class="form-group">            
              <label class="form-label" for="email">Email</label>            
              <input class="form-control" id="email" type="email" value="mia.wallace@beechfarm.co.uk">            
            </div>
            
            <div class="form-group">            
              <label class="form-label" for="landline">Landline</label>            
              <input class="form-control form-control-1-4" id="landline" type="tel" value="0147 9643 7573">            
            </div>
            
            <div class="form-group">            
              <label class="form-label" for="mobile">Mobile</label>            
              <input class="form-control form-control-1-4" id="mobile" type="tel" value="0797 8377 7457">            
            </div>
    
          </fieldset>
          
        
        </div>
  
  
        <div class="form-group">
        
          <button class="button" type="submit">Contine</button>
          
        </div>
  
  
      </form>
  
  
		</div>
		
		
	</div>