    <div class="grid-row">


      <div class="column-half">


        <h1 class="heading-xlarge">What do you want to add to this land?</h1>


        <form class="form" method="get" action="../add-feature-details/">


          <div class="form-group">

            <label class="form-label" for="land-use">Enter the land use or feature
              <span class="form-hint">For example 'Pond', 'Trees' or 'Farmyard'</span>
            </label>

            <input class="form-control form-control-3-4" id="land-use" type="text" value="Sweet potatoes">

          </div>


          <div class="form-group">
            <button class="button" type="submit">Continue</button>
          </div>


        </form>


      </div>


      <div class="column-half">

        {{>map}}
        
        <p class="map-print">
          <a href="#">Print map</a>
          <span class="font-xsmall hidden">Printing services is not available</span>
        </p>

      </div>


    </div>