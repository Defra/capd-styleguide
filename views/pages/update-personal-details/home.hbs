    <h1 class="heading-xlarge">Update personal details</h1>


    <div class="text">
      
      <p class="lede">Keeping your personal details up to date saves time when applying for grants and schemes.</p>
      
      <p>You must complete all fields, unless they're marked as optional.</p>
      
    </div>


    <form class="form" method="get" action="/">


      <!-- personal details -->
      <fieldset> 
        
        
        <legend class="heading-medium">Personal details</legend>     


        <div class="form-group">
        
          <label for="title">
            <span class="form-label">Title (optional)</span>
          </label>
          
          <select class="form-control" id="title">
            <option>-- Please make a selection --</option>
            <option value="1" selected>Miss</option>
            <option value="2">Ms</option>
            <option value="3">Mr</option>
            <option value="4">Dr</option>
            <option value="5">Sir</option>
          </select>
          
        </div>


        <div class="form-group">
          
          <label for="first-name">
            <span class="form-label">First name</span>
          </label>
          
          <input class="form-control" id="first-name" type="text" value="Mia">
          
        </div>
  
  
        <div class="form-group">
          
          <label for="middle-name">
            <span class="form-label">Middle name (optional)</span>
          </label>
          
          <input class="form-control" id="middle-name" type="text" value="Jane">
          
        </div>


        <div class="form-group">
        
          <label for="last-name">
            <span class="form-label">Last name</span>
          </label>
          
          <input class="form-control" id="last-name" type="text" value="Wallace">
          
        </div>


        <div class="form-group">

          <fieldset>
  
            <legend>
              <span class="form-label">Date of birth</span>
            </legend>
  
            <div class="form-date">
  
            	<div class="form-group form-group-day">
            		
            		<label for="dob-day">
            		  <span class="form-label">Day</span>
            		</label>
            		
            		<input class="form-control" id="dob-day" type="text" value="18">
            		
            	</div>
  
            	<div class="form-group form-group-month">
            		
            		<label for="dob-month">
            		  <span class="form-label">Month</span>
            		</label>
            		
            		<input class="form-control" id="dob-month" type="text" value="10">
            		
            	</div>
  
            	<div class="form-group form-group-year">
            		
            		<label for="dob-year">
            		  <span class="form-label">Year</span>
            		</label>
            		
            		<input class="form-control" id="dob-year" type="text" value="1969">
            		
            	</div>
  
            </div>
  
          </fieldset>
  
        </div>
      
      
      </fieldset>
      
      
      
      <fieldset>
        
        
        <legend class="heading-medium">Address</legend> 
        
        
        <div class="form-group-compound">
      						
					<label for="address-line-1">
					  <span class="form-label">Street</span>
					</label>
					
					<input class="form-control" id="address-line-1" type="text" value="Beech Farm">
					
				</div>
				

				<div class="form-group">
					
					<label for="address-line-2">
					  <span class="form-label visuallyhidden">Street</span>
					</label>
					
					<input class="form-control" id="address-line-2" type="text" value="Pooley Bridge">
					
				</div>
				

				<div class="form-group">
					
					<label for="address-town">
					  <span class="form-label">Town or City</span>
					</label>
					
					<input class="form-control form-control-1-4" id="address-town" type="text" value="Penrith">
					
				</div>
				

				<div class="form-group">
					
					<label for="address-postcode">
					  <span class="form-label">Postcode</span>
					</label>
					
					<input class="form-control form-control-1-8" id="address-postcode" type="text" value="CH3 6NZ">
				
				</div>       
        
        
      </fieldset>
      
      
      
      <!-- email and telephone -->
      <fieldset>
        
        
        <legend class="heading-medium">Email and telephone</legend>
        
        
        <p>You must enter either a landline or mobile number.</p>
        
        
        <div class="form-group">
          
          <label for="email">
            <span class="form-label">Email</span>
          </label>
          
          <input class="form-control" id="email" type="email" value="mia.wallace@beechfarm.co.uk">
          
        </div>
        

        <div class="form-group">
          
          <label for="landline">
            <span class="form-label">Landline</span>
          </label>
          
          <input class="form-control" id="landline" type="tel" value="0147 9643 7573">
          
        </div>
        

        <div class="form-group">
          
          <label for="mobile">
            <span class="form-label">Mobile</span>
          </label>
          
          <input class="form-control" id="mobile" type="tel" value="0797 8377 7457">
          
        </div>
        
        
      </fieldset>
      
      


      <button class="button" type="submit">Save</button>
      
      <p><a href="../">Back</a></p>


    </form>